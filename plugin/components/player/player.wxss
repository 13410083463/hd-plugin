#header{
  width:100%;
  position: fixed;
  top:0;
  z-index:998;
}
.box{
  display:flex;
  align-items:center;
  margin-left:20rpx;
}
.nav-capsule {
  display: flex;
  align-items: center;
}
.box .fanhui{
  width:64rpx;
  height:64rpx;
}
.box .userInfo{
  display:flex;
  align-items:center;
  background:#b8b9b8;
  border-radius:34rpx;
  padding:4rpx 0rpx 4rpx 4rpx;
  margin-left:30rpx;
}
.box .userInfo .userName{
  padding:0 20rpx;
}
.box .userInfo .userName .name{
  font-size:24rpx;
  color:#171717;
}
.box .userInfo .userName .chishu{
  font-size:20rpx;
  color:#171717;
}

.box .userInfo cover-image{
  width:56rpx;
  height:56rpx;
  border-radius:50%;
}
.pusher{
  position:absolute;
  top:0;
  width:100%;
  height:100%;
  z-index:10;
}
.functional-page-navigator-hover{
  background:none;
}
/* 登录 */
.admission{
  width: 90%;
  /* height: 40%; */
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  z-index: 9999;
  border-radius: 5rpx;
}
.admission .character{
  width: 100%;
  padding-top: 10%;
  display: flex;
  justify-content: center;
  font-size: 38rpx;
  color: #333;
  font-weight: 600;
}
.admission .wrestle{
  padding-top: 5%;
  color: #8b8b8b;
  text-align: center;
}
.admission .dictation{
  width: 100%;
  height: 320rpx;
}
.admission .dictation image{
  width: 100%;
  height: 100%;
}
.admission .bless{
  display: flex;
  padding: 5% 0 5% 0;
  justify-content:center;
}
.admission .bless .admire{
  width:400rpx;
  height: 90rpx;
  border-radius: 90rpx;
  color: #ffffff;
  font-size: 38rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.admission .bless .admirabls{
  background-color: #cdcdcd;
}
.admission .bless .admirable{
  background-color: #ff4544;
  border: 0;
}
.admiradlesd{
  position: fixed;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}


/* 摄像头授权 */
.opencame{
  width:100%;
  height:100%;
  position:fixed;
  left:0;
  top:0;
  display:flex;
  background: rgba(0,0,0,.8);
  justify-content:center;
  align-items:center;
  z-index:400;
}
.opencame .box{
  width:475rpx;
  height:330rpx;
  background:#fff;
  border-radius:10rpx;
  display:flex;
  justify-content:center;
  flex-direction:column;
}
.opencame .box .title{
  font-size:26rpx;
}
.opencame .box .setting{
  width:376rpx;
  height:76rpx;
  background: linear-gradient(90deg, rgba(224, 117, 229, 1), rgba(182, 101, 240, 1));
  border-radius: 19px;
  text-align: center;
  line-height: 76rpx;
  font-size: 28rpx;
  color:#fff;
  margin-top:40rpx;
}