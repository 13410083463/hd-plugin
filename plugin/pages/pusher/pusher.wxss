.p_header {
  width: 100%;
  position: fixed;
  top: 0rpx;
  z-index: 998;
}
.p_page{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 20;
}
.box {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.nav-capsule {
  display: flex;
  align-items: center;
}

.box .fanhui {
  width: 64rpx;
  height: 64rpx;
}

.box .userInfo {
  display: flex;
  align-items: center;
  background: #b8b9b8;
  border-radius: 34rpx;
  padding: 4rpx 0rpx 4rpx 4rpx;
  margin-left: 30rpx;
}
.box .userInfo .userName {
  padding: 0 20rpx;
}

.box .userInfo .userName .name {
  font-size: 24rpx;
  color: #171717;
}

.box .userInfo .userName .chishu {
  font-size: 20rpx;
  color: #171717;
}

.box .userInfo cover-image {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
}

.pusher {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
}

.functional-page-navigator-hover {
  background: none;
}

/* 登录 */

.admission {
  width: 90%;
  /* height: 40%; */
  background-color: #fff;
  display: flex;
  flex-direction: column;
  z-index: 9999;
  border-radius: 5rpx;
}

.admission .character {
  width: 100%;
  padding-top: 10%;
  display: flex;
  justify-content: center;
  font-size: 38rpx;
  color: #333;
  font-weight: 600;
}

.admission .wrestle {
  padding-top: 5%;
  color: #8b8b8b;
  text-align: center;
}

.admission .dictation {
  width: 100%;
  height: 320rpx;
}

.admission .dictation image {
  width: 100%;
  height: 100%;
}

.admission .bless {
  display: flex;
  padding: 5% 0 5% 0;
  justify-content: center;
}

.admission .bless .admire {
  width: 400rpx;
  height: 90rpx;
  border-radius: 90rpx;
  color: #fff;
  font-size: 38rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.admission .bless .admirabls {
  background-color: #cdcdcd;
}

.admission .bless .admirable {
  background-color: #ff4544;
  border: 0;
}

.admiradlesd {
  position: fixed;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

/*评论 */

.comment {
  position: absolute;
  height: 350rpx;
  width: 100%;
  box-sizing: border-box;
  left: 30rpx;
  bottom: 130rpx;
  overflow-y: scroll;
  z-index: 999;
}

.comment .rt {
  display: block;
  width: 70%;
  font-size: 24rpx;
  color: orange;
}

.comment .rt .tips {
  white-space: normal;
}

.comment .barrage {
  display: flex;
  justify-content: left;
  margin: 8rpx 0;
  align-items: center;
  white-space: normal;
  min-width: 70%;
  height: auto;
}

.comment .barrage .userlogo {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}

.comment .barrage .barrageTxt {
  padding: 6rpx 5rpx 10rpx 10rpx;
  color: orange;
  font-size: 28rpx;
  word-wrap: break-word;
  position: relative;
  border-radius: 20rpx;
  width:600rpx;
  white-space: normal;
}

.footer {
  position: absolute;
  left: 16rpx;
  bottom: 50rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  width: 694rpx;
  height: 115rpx;
  align-items: flex-end;
  z-index: 999;
}

.footer .sanleft,.footer .sanright {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  width: 362rpx;
  height: 82rpx;
}

.footer .sanleft .danmu {
  width: 264rpx;
  height: 66rpx;
  background: rgba(18, 21, 32, 0.4);
  border-radius: 13px;
  display: flex;
  align-items: center;
  color:#fff;
}

.footer .sanleft .danmu .img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 9px;
  margin-left: 10px;
}
.footer .sanright .block{
  transition: all;
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content:flex-end;
}
.footer .sanright .block .imgmore{
  width: 48rpx;
  height: 12rpx;
  text-align: center;
}
.footer .sanright .block .img{
  width: 82rpx;
  height: 82rpx;
}

.shade{
  width: 100%;
  height:100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1001;
}
.icomment{
  width: 100%;
  background:#fff;
  transition: all .3s;
  overflow: hidden;
  position: absolute;
  bottom: 0;
  z-index: 9;
}
.icomment .inp{
  width: 100%;
  height:100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: #fff;
}

/* 相机 */
.switchCamera {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 73rpx;
  top: 355rpx;
  z-index: 300;
}

